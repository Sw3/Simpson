<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#BCBCBC"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="7dp"
    android:padding="8dp"
    android:id="@+id/resumen_cservicios"
    android:layout_margin="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="15dp"
        android:background="@color/verdeClaro">

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:src="@drawable/servicio"
            android:tooltipText="Silueta"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id= "@+id/cservicio_resumen_nombre"
            android:text= "Nombre"
            android:layout_width= "wrap_content"
            android:layout_height= "wrap_content"
            android:layout_alignParentTop= "true"
            android:layout_toEndOf= "@+id/imagen"
            android:textSize= "@dimen/lista_texto_titulo" />

        <TextView
            android:id= "@+id/cservicio_resumen_fecha_nacimiento"
            android:text= "Fecha de nacimiento"
            android:layout_width= "wrap_content"
            android:layout_height= "wrap_content"
            android:layout_below= "@+id/cservicio_resumen_nombre"
            android:textSize="@dimen/lista_texto_fecha"
            android:layout_marginTop= "5dp"
            android:layout_toEndOf= "@+id/imagen" />

    </RelativeLayout>

</android.support.v7.widget.CardView>