<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#BCBCBC"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="7dp"
    android:padding="8dp"
    android:id="@+id/resumen_solicituds"
    android:layout_margin="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="15dp"
        android:background="@color/verdeClaro">

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:src="@drawable/silueta"
            android:tooltipText="Silueta"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id= "@+id/solicitud_resumen_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imagen"
            android:textColor="@color/textoVerde"
            android:text="Nombre"
            android:textSize="@dimen/lista_texto_fecha" />

        <TextView
            android:id="@+id/solicitud_resumen_fecha_nacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/solicitud_resumen_nombre"
            android:layout_marginBottom="29dp"
            android:text="Fecha de nacimiento"
            android:textColor="@color/textoVerde"
            android:textSize="@dimen/lista_texto_fecha" />

    </RelativeLayout>

</android.support.v7.widget.CardView>